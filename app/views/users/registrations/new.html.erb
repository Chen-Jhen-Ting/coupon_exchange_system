<h2 class='text-center h3 text-success'>歡迎註冊</h2>

<%= form_for(resource, as: resource_name, :html => { class: 'col-6 m-auto text-danger'}, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email, '信箱' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'請輸入信箱' %>
  </div>

  <div class="field form-group">
    <%= f.label :password,'密碼' %>
    <% if @minimum_password_length %>
    <em>(最少 <%= @minimum_password_length %> 個字 )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control', placeholder:'輸入密碼'%>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation,'再次確認密碼' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', placeholder:'驗證密碼' %>
  </div>

  <div class="actions">
    <%= f.submit "註冊", class: 'btn btn-primary w-100', id:'sign_up_btn'%>
  </div>
<% end %>
<div class='col-6 m-auto'>
  <%= render "users/shared/links" %>
</div>
