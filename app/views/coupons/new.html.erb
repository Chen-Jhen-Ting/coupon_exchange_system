<h1 class='text-center h3 text-success'>歡迎申請兌換卷</h1>

<% if @coupon.errors.any? %>
  <ul>
  <% @coupon.errors.messages.values.each do |message| %>
    <li><%= message[0] %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @coupon,:html => { class: 'col-6 m-auto text-danger'},url: coupon_path do |f| %>
  <div class="form-group">
    <%= f.label :name, "姓名" %>
    <%= f.text_field :name, class:'form-control', placeholder: '輸入您的姓名' %>
  </div>

  <div class="form-group">
    <%= f.label :twid, "身分證字號" %>
    <%= f.text_field :twid, class:'form-control', placeholder: '身分證字號' %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "手機號碼" %>
    <%= f.text_field :phone, class:'form-control', placeholder: 'xxxx-xxx-xxx' %>
  </div>

  <%= f.submit "送出" , class: 'btn btn-primary w-100',id: 'coupon-apply-btn'%>
<% end %>